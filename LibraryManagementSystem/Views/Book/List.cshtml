@model List<LibraryManagementSystem.Models.Book>

@{
    ViewData["Title"] = "Kitap Listesi";
}

<h2>Kitap Listesi</h2>
<a href="/Book/Create" class="btn btn-success mb-3">Yeni Kitap Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Tür</th>
            <th>Yayın Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Genre</td>
                <td>@book.PublishDate.ToShortDateString()</td>
                <td>
                    <a href="/Book/Details/@book.Id" class="btn btn-info btn-sm">Detay</a>
                    <a href="/Book/Edit/@book.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Book/Delete/@book.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
