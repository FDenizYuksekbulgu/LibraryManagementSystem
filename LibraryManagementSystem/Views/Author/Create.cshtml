@model LibraryManagementSystem.Models.Author

@{
    ViewData["Title"] = "Yeni Yazar Ekle";
}

<h2>Yeni Yazar Ekle</h2>

@* FORM BAŞLANGICI *@
<form method="post">
    <div class="mb-3">
        <label class="form-label">Ad</label>
        <input type="text" class="form-control" asp-for="FirstName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Soyad</label>
        <input type="text" class="form-control" asp-for="LastName" required>
    </div>
    <div class="mb-3">
        <label class="form-label">Doğum Tarihi</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" required>
    </div>

    @* FORMU BU BUTONLA GÖNDERECEĞİZ *@
    <button type="submit" class="btn btn-primary">Ekle</button>
</form>
