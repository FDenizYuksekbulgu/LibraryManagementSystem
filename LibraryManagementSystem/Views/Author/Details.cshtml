@model LibraryManagementSystem.Models.Author

@{
    ViewData["Title"] = "Yazar Detayı"; // Sayfanın başlığı
}

<h2>Yazar Bilgileri</h2>

<p><strong>Ad:</strong> @Model.FirstName</p>
<p><strong>Soyad:</strong> @Model.LastName</p>
<p><strong>Doğum Tarihi:</strong> @Model.DateOfBirth.ToShortDateString()</p>

