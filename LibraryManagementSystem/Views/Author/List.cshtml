@model List<LibraryManagementSystem.Models.Author>

@{
    ViewData["Title"] = "Yazar Listesi"; // Sayfanın başlığını belirliyoruz.
}

<h2>Yazar Listesi</h2>

<!-- Yeni yazar eklemek için buton -->
<a href="/Author/Create" class="btn btn-success mb-3">Yeni Yazar Ekle</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ad</th>
            <th>Soyad</th>
            <th>Doğum Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.FirstName</td>
                <td>@author.LastName</td>
                <td>@author.DateOfBirth.ToShortDateString()</td>
                <td>
                    <a href="/Author/Details/@author.Id" class="btn btn-info btn-sm">Detay</a>
                    <a href="/Author/Edit/@author.Id" class="btn btn-warning btn-sm">Düzenle</a>
                    <a href="/Author/Delete/@author.Id" class="btn btn-danger btn-sm">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
